{
    "metadata": {
        "description": "I/O benchmarks",
        "version": "1.0",
        "runs": 2,
        "timeout": 600,
        "input_file": "random_numbers.bin",
        "omp-tasks": {
            "path": "benchs/omp-tasks",
            "base_path": "benchs/omp-tasks",
            "env": {
                "CC": "gcc",
                "CXX": "g++"
            },
            "build_instructions": [
                {
                    "command": "mkdir -p build",
                    "cwd": "{{base_path}}"
                },
                {
                    "command": "cmake .. -DCMAKE_BUILD_TYPE=Release",
                    "cwd": "{{base_path}}/build"
                },
                {
                    "command": "make -j",
                    "cwd": "{{base_path}}/build"
                }
            ],
            "command": {
                "template": "{{base_path}}/build/lustre1 -t {{tasks}} -r {{read_step}} -f {{input_file}}"
            }
        },
        "mpi-io": {
            "path": "benchs/mpi-io",
            "base_path": "benchs/omp-tasks",
            "env": {
                "CC": "mpicc",
                "CXX": "mpicxx"
            },
            "build_instructions": [
                {
                    "command": "mkdir -p build",
                    "cwd": "{{base_path}}"
                },
                {
                    "command": "cmake .. -DCMAKE_BUILD_TYPE=Release",
                    "cwd": "{{base_path}}/build"
                },
                {
                    "command": "make -j",
                    "cwd": "{{base_path}}/build"
                }
            ],
            "command": {
                "template": "mpirun -np {{procs}} ./mpi-io -n {{nodes}} -r {{read_step}} -i {{input_file}}"
            }
        }
    },
    "omp-tasks": {
        "tasks": [
            1
        ],
        "read_step": [
            100
        ]
    },
    "mpi-io": {
        "nodes": [
            1
        ],
        "procs": [
            1
        ],
        "read_step": [
            100
        ]
    }
}