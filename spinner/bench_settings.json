{
    "metadata": {
        "description": "I/O benchmarks",
        "version": "1.0",
        "runs": 2,
        "timeout": 600,
        "input_file": "random_numbers.bin",
        "omp-tasks": {
            "build": {
                "cmake_flags": [
                    "-DCMAKE_BUILD_TYPE=Release"
                ],
                "make_flags": [
                    "-j"
                ],
                "env": {
                    "CC": "gcc",
                    "CXX": "g++"
                },
                "path": "benchs/omp-tasks"
            },
            "command": {
                "template": "{{base_path}}/build/lustre1 -t {{tasks}} -r {{read_step}} -f {{input_file}}"
            }
        },
        "mpi-io": {
            "build": {
                "cmake_flags": [
                    "-DCMAKE_BUILD_TYPE=Release"
                ],
                "make_flags": [
                    "-j"
                ],
                "env": {
                    "CC": "mpicc",
                    "CXX": "mpicxx"
                },
            "path": "benchs/mpi-io",
            "command": {
                "template": "mpirun -np {{procs}} ./mpi-io -n {{nodes}} -r {{read_step}} -i {{input_file}}"
            }
            }
        }
    },
    "omp-tasks": {
        "tasks": [
            1
        ],
        "read_step": [
            100
        ]
    },
    "mpi-io": {
        "nodes": [
            1
        ],
        "procs": [
            1
        ],
        "read_step": [
            100
        ]
    }
}
